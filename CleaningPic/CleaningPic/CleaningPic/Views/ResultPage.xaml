<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CleaningPic.Views.ResultPage"
    Padding="16, 16, 16, 16"
    Title="解析結果">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Image
            x:Name="resultImage"
            Grid.Row="0"
            Grid.Column="0"/>

        <ListView
            x:Name="listView"
            Grid.Row="1"
            Grid.Column="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Text="{Binding Dirt}" Detail="{Binding Method}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>